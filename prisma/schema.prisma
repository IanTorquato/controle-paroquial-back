generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Parish {
  id            String      @id @default(uuid())
  name          String
  location      String
  adminPriest   Priest      @relation(fields: [adminPriestId], references: [id])
  adminPriestId String      @unique
  communities   Community[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@map("parishes")
}

model Priest {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  birthday      DateTime
  phone         String?  @db.VarChar(24)
  currentParish Parish?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("priests")
}

model Community {
  id        String   @id @default(uuid())
  name      String
  parish    Parish   @relation(fields: [parishId], references: [id])
  parishId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("communities")
}
